{
  "name": "jest-webextension-mock",
  "version": "4.1.0",
  "description": "Mock the components of a WebExtension",
  "main": "dist/setup.js",
  "module": "src/setup.js",
  "author": "Marwan Zibaoui <marwan.zibaoui@gmail.com> (https://mas.to/@Rickymarou)",
  "license": "ISC",
  "files": [
    "dist",
    "src",
    "LICENSE",
    "README.md",
    "CHANGELOG.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/RickyMarou/jest-webextension-mock"
  },
  "scripts": {
    "test": "jest",
    "build": "rollup -c",
    "integration:test": "node integration/run.mjs",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prettier": "prettier --write \"{src,__tests__,__setups__}/**/*.js\" rollup.config.js prettier.config.js",
    "prepublishOnly": "npm run build",
    "release": "changeset version"
  },
  "devDependencies": {
    "@babel/core": "^7.29.0",
    "@babel/preset-env": "^7.29.0",
    "@changesets/cli": "^2.29.8",
    "babel-jest": "^29.7.0",
    "eslint": "^9.39.3",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-prettier": "^5.5.5",
    "jest": "^29.7.0",
    "prettier": "^3.8.1",
    "rollup": "^2.80.0",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-watch": "^4.3.1"
  },
  "jest": {
    "bail": true,
    "coverageDirectory": "./coverage/",
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "html"
    ],
    "collectCoverage": true,
    "setupFiles": [
      "./__setups__/chrome.js"
    ]
  }
}
